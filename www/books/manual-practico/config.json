        "default": {
          "name": "Guía Contemplativo",
          "tone": "serene",
          "focus": "practice"
        }
      }
    },
    "personalNotes": {
      "enabled": true,
      "markdown": true,
      "exportable": true
    },
    "bookmarks": {
      "enabled": true,
      "allowMultiple": true
    },
    "progressTracking": {
      "enabled": true,
      "trackTime": true,
      "trackChapters": true,
      "trackExercises": true
    }
  },
  "content": {
    "sourceFile": "books/manual-practico/book.json",
    "dataStructure": "standard"
  },
  "metadata": {
    "locale": "es-ES",
    "readingLevel": "principiante-intermedio",
    "recommendedPace": "slow",
    "linkedTo": "codigo-despertar"
