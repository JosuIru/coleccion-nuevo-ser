# ===========================================
# COLECCION NUEVO SER - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys

# Use pk_test_ for development, pk_live_ for production
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here

# Use sk_test_ for development, sk_live_ for production
# IMPORTANT: Only used in Edge Functions, never in frontend!
STRIPE_SECRET_KEY=sk_test_your-key-here

# Webhook signing secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here

# ===========================================
# RECAPTCHA CONFIGURATION
# ===========================================
# Get from: https://www.google.com/recaptcha/admin

RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ===========================================
# EMAIL CONFIGURATION (Resend)
# ===========================================
# Get from: https://resend.com/api-keys

RESEND_API_KEY=re_your-api-key-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Environment: development | staging | production
NODE_ENV=development

# Enable debug logging
DEBUG_MODE=false

# App URL for emails and redirects
APP_URL=https://your-app-url.com
