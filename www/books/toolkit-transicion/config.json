{
  "id": "toolkit-transicion",
  "version": "1.0.0",
  "lastUpdate": "2025-12-01",

  "theme": {
    "name": "Transition Green",
    "primary": "#059669",
    "secondary": "#10b981",
    "accent": "#34d399",
    "background": "#1a1a1a",
    "backgroundSecondary": "#262626",
    "text": "#fafafa",
    "textSecondary": "#e5e5e5",
    "border": "#065f46",
    "gradient": "from-neutral-950 via-emerald-950 to-teal-950"
  },

  "ui": {
    "showGeometric": false,
    "animationType": "smooth",
    "animationSpeed": "medium",
    "fontFamily": "'Inter', 'Segoe UI', sans-serif",
    "fontSize": {
      "base": 16,
      "heading": 24,
      "title": 32
    },
    "spacing": {
      "section": 28,
      "paragraph": 14
    },
    "effects": {
      "diagonalLines": false,
      "geometricPatterns": false,
      "boldHeaders": true
    }
  },

  "features": {
    "exerciseGuides": {
      "enabled": true,
      "showDifficulty": true,
      "showDuration": true,
      "showMaterials": true,
      "trackProgress": true
    },
    "aiChat": {
      "enabled": true,
      "systemPrompt": "Eres un facilitador de ejercicios de transición basado en el 'Toolkit de Transición'. Ayudas a los usuarios a completar ejercicios prácticos para navegar el cambio sistémico. Eres guía, paciente y orientado a la práctica.",
      "maxHistoryMessages": 10
    },
    "personalNotes": {
      "enabled": true,
      "markdown": true,
      "exportable": true,
      "tags": ["reflexión", "insight", "obstáculo", "aprendizaje"]
    },
    "bookmarks": {
      "enabled": true,
      "allowMultiple": true
    },
    "progressTracking": {
      "enabled": true,
      "trackTime": true,
      "trackChapters": true,
      "trackExercises": true
    },
    "printable": {
      "enabled": true,
      "includeWorksheets": true
    },
    "audiobook": {
      "enabled": true,
      "voice": "es-ES",
      "speedControl": true,
      "speeds": [0.75, 1.0, 1.25, 1.5, 2.0],
      "highlightCurrentParagraph": true,
      "autoAdvanceChapter": true
    }
  },

  "metadata": {
    "locale": "es-ES",
    "readingLevel": "intermediate",
    "recommendedPace": "practical",
    "complementaryBooks": ["manual-transicion", "manifiesto"],
    "prerequisites": [],
    "targetAudience": ["activistas", "facilitadores", "agentes de cambio"]
  }
}
