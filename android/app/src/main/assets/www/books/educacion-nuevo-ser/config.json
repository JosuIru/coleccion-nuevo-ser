{
  "id": "educacion-nuevo-ser",
  "version": "1.0.0",
  "lastUpdate": "2025-12-22",

  "theme": {
    "name": "Educational Green",
    "primary": "#10b981",
    "secondary": "#059669",
    "accent": "#34d399",
    "background": "#064e3b",
    "backgroundSecondary": "#065f46",
    "text": "#d1fae5",
    "textSecondary": "#a7f3d0",
    "border": "#047857",
    "gradient": "from-emerald-700 to-teal-800"
  },

  "ui": {
    "showStarfield": true,
    "animationType": "organic",
    "animationSpeed": "medium",
    "fontFamily": "Inter, system-ui, sans-serif",
    "fontSize": {
      "base": 16,
      "heading": 24,
      "title": 32
    },
    "spacing": {
      "section": 32,
      "paragraph": 16
    }
  },

  "features": {
    "audiobook": {
      "enabled": true,
      "voice": "es-ES",
      "speedControl": true,
      "speeds": [0.75, 1.0, 1.25, 1.5],
      "highlightCurrentParagraph": true,
      "autoAdvanceChapter": false
    },
    "aiChat": {
      "enabled": true,
      "systemPrompt": "Eres un asistente pedagógico especializado en educación regenerativa y transformación educativa. Ayudas a padres, educadores y estudiantes a navegar la transición hacia una educación basada en las premisas del nuevo ser.",
      "modes": {
        "reflexivo": {
          "name": "Guía Reflexivo",
          "prompt": "Ayudas a reflexionar sobre experiencias educativas personales y patrones sistémicos observados."
        },
        "practico": {
          "name": "Facilitador Práctico",
          "prompt": "Ofreces estrategias concretas para implementar prácticas regenerativas en distintos contextos educativos."
        },
        "critico": {
          "name": "Analista Sistémico",
          "prompt": "Ayudas a analizar críticamente estructuras y premisas del sistema educativo actual."
        }
      },
      "maxHistoryMessages": 10
    },
    "personalNotes": {
      "enabled": true,
      "markdown": true,
      "exportable": true
    },
    "bookmarks": {
      "enabled": true,
      "allowMultiple": true
    },
    "progressTracking": {
      "enabled": true,
      "trackTime": true,
      "trackChapters": true,
      "trackExercises": true
    },
    "resources": {
      "enabled": true,
      "file": "books/educacion-nuevo-ser/assets/resources.json"
    },
    "exercises": {
      "enabled": true,
      "file": "books/educacion-nuevo-ser/assets/exercises.json"
    },
    "quizzes": {
      "enabled": true,
      "file": "books/educacion-nuevo-ser/assets/quizzes.json"
    }
  },

  "content": {
    "sourceFile": "books/educacion-nuevo-ser/book.json",
    "dataStructure": "standard"
  },

  "metadata": {
    "locale": "es-ES",
    "readingLevel": "intermediate",
    "recommendedPace": "moderate",
    "tags": ["educación", "pedagogía", "transformación educativa", "crianza", "sistema educativo"],
    "complementaryBooks": ["filosofia-nuevo-ser", "manual-practico", "codigo-despertar", "nacimiento"],
    "targetAudience": ["padres", "educadores", "estudiantes", "activistas educativos"]
  }
}
