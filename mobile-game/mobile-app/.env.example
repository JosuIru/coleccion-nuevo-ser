# AWAKENING PROTOCOL - ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env.development, .env.staging, .env.production

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Base URL for API requests
API_BASE_URL=http://localhost:3000/api

# API timeout in milliseconds
API_TIMEOUT=10000

# API version
API_VERSION=v1

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable analytics tracking (Google Analytics, Firebase Analytics, etc.)
ENABLE_ANALYTICS=false

# Enable crash reporting (Sentry, Firebase Crashlytics, etc.)
ENABLE_CRASH_REPORTING=false

# Enable performance monitoring (Firebase Performance, etc.)
ENABLE_PERFORMANCE_MONITORING=false

# Enable debug mode (extra logging, dev tools, etc.)
ENABLE_DEBUG_MODE=true

# Enable offline mode
ENABLE_OFFLINE_MODE=true

# Enable GPS/location features
ENABLE_GPS=true

# Enable cooperative multiplayer
ENABLE_MULTIPLAYER=false

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false

# Firebase
FIREBASE_ENABLED=false
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Google Maps API (if using Google Maps instead of open maps)
GOOGLE_MAPS_API_KEY=

# ============================================================================
# APP CONFIGURATION
# ============================================================================

# App version (synced with package.json)
APP_VERSION=1.0.0

# Build type (development, staging, production)
BUILD_TYPE=development

# Bundle ID (Android package name)
BUNDLE_ID=com.awakeningprotocol.mobile.dev

# App name (can vary by environment)
APP_NAME=Awakening Protocol (Dev)

# ============================================================================
# GAME CONFIGURATION
# ============================================================================

# Starting energy
INITIAL_ENERGY=100

# Energy regeneration rate (per minute)
ENERGY_REGEN_RATE=1

# Starting consciousness
INITIAL_CONSCIOUSNESS=0

# Maximum number of beings a player can have
MAX_BEINGS=50

# GPS update interval in milliseconds
GPS_UPDATE_INTERVAL=5000

# Fractal spawn radius in meters
FRACTAL_SPAWN_RADIUS=1000

# Maximum distance to interact with fractal/crisis in meters
INTERACTION_RADIUS=50

# ============================================================================
# STORAGE
# ============================================================================

# AsyncStorage key prefix
STORAGE_PREFIX=awakening_

# Maximum cache size in MB
MAX_CACHE_SIZE=100

# Cache expiration in hours
CACHE_EXPIRATION=24

# ============================================================================
# NETWORK
# ============================================================================

# Network request retry attempts
NETWORK_RETRY_ATTEMPTS=3

# Network request retry delay in milliseconds
NETWORK_RETRY_DELAY=1000

# Enable request caching
ENABLE_REQUEST_CACHE=true

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=false

# Firebase Cloud Messaging server key
FCM_SERVER_KEY=

# ============================================================================
# DEBUG & DEVELOPMENT
# ============================================================================

# Enable React DevTools
ENABLE_REACT_DEVTOOLS=true

# Enable Flipper debugging
ENABLE_FLIPPER=true

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable mock data for testing
ENABLE_MOCK_DATA=false

# Mock GPS location (lat,lng)
MOCK_GPS_LOCATION=40.416775,-3.703790

# ============================================================================
# SECURITY
# ============================================================================

# Enable SSL certificate pinning
ENABLE_SSL_PINNING=false

# SSL certificates to pin (comma separated SHA-256 hashes)
SSL_PINS=

# Enable biometric authentication
ENABLE_BIOMETRIC_AUTH=true

# ============================================================================
# PERFORMANCE
# ============================================================================

# Enable code splitting
ENABLE_CODE_SPLITTING=true

# Enable lazy loading
ENABLE_LAZY_LOADING=true

# Maximum FPS (0 = unlimited)
MAX_FPS=60

# Enable image optimization
ENABLE_IMAGE_OPTIMIZATION=true

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Enable AR mode (augmented reality)
ENABLE_AR_MODE=false

# Enable voice commands
ENABLE_VOICE_COMMANDS=false

# Enable AI chat assistant
ENABLE_AI_ASSISTANT=false

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# RSS feed URLs for crisis data (comma separated)
RSS_FEED_URLS=https://example.com/feed1.xml,https://example.com/feed2.xml

# Weather API key (for environmental factors)
WEATHER_API_KEY=

# News API key (for crisis sourcing)
NEWS_API_KEY=

# ============================================================================
# DEPLOYMENT
# ============================================================================

# Deployment environment identifier
DEPLOYMENT_ENV=local

# Build number (auto-incremented in CI/CD)
BUILD_NUMBER=1

# Git commit hash (auto-populated in CI/CD)
GIT_HASH=

# Build timestamp (auto-populated)
BUILD_TIMESTAMP=

# ============================================================================
# LEGAL
# ============================================================================

# Privacy policy URL
PRIVACY_POLICY_URL=https://nuevosser.org/privacy

# Terms of service URL
TERMS_OF_SERVICE_URL=https://nuevosser.org/terms

# Support email
SUPPORT_EMAIL=support@nuevosser.org

# ============================================================================
# NOTES
# ============================================================================

# 1. Never commit .env files with real credentials to git
# 2. Use different .env files for each environment
# 3. In CI/CD, use encrypted secrets instead of .env files
# 4. Validate all required env vars at app startup
# 5. Use .env.local for local overrides (add to .gitignore)
